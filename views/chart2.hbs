<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap-5.0.2.min.css">
    <link rel="stylesheet" href="/style.css">
    <title>Chart #2</title>
</head>
<body>
    {{>header}}
    <div class="container mt-4">
        <div class="chart-container" style="position: relative; height:40vh; width:40vw">
            <canvas id="myChart">
                <p>Your browser not supported...</p>
            </canvas>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <script>
            const results = ["{{this.state_t}}"]; 
            results.push(results);
            document.write(results);
        </script>
        <script>
            const data = {
                labels: [
                    'Red',
                    'Blue',
                    'Yellow'
                ],
                datasets: [{
                    label: 'My First Dataset',
                    data: [300, 50, 100],
                    backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 205, 86)'
                    ],
                    hoverOffset: 4
                }]
            };
            
            const config = {
                type: 'pie',
                data: data,
            };

            const myChart = new Chart(
                document.getElementById('myChart'),
                config
            );
        </script>
    </div>
    <div>
        {{#each result}}
        Results: {{this.state_t}} | {{this.cnt}}<br>
        {{/each}}
    </div>
    {{>footer}}
    <script src="/bootstrap-5.0.2.min.js"></script>
</body>
</html>